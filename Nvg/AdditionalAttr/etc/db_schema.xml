<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="vendor_source" resource="default" comment="vendor_source">
        <column xsi:type="int"
                name="id"
                unsigned="true"
                padding="10"
                nullable="false"
                identity="true"
                comment="id"/>
        <column xsi:type="varchar"
                name="name"
                length="40"
                nullable="false"
                comment="name"/>
        <column xsi:type="text"
                name="description"
                nullable="false"
                comment="description"/>
        <column xsi:type="date"
                name="date"
                nullable="false"
                comment="date"/>
        <column xsi:type="text"
                name="logo"
                nullable="false"
                comment="logo"/>
        <constraint xsi:type="primary" referenceId = "PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
